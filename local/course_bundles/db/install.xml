<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/course_bundles/db" VERSION="20180116" COMMENT="XMLDB file for Moodle local/course_bundles"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_course_bundles" COMMENT="Course bundle information">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Bundle Name"/>
        <FIELD NAME="state" TYPE="char" LENGTH="30" NOTNULL="true" SEQUENCE="false" COMMENT="State Bundle is associated with"/>
        <FIELD NAME="courses" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Comma separated list of course ids"/>
        <FIELD NAME="price" TYPE="float" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="Price of the bundle"/>
        <FIELD NAME="ecommproductid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Product ID from ECommerce Site"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>